<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Buttons -->

    <!-- Button -->
    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Common Action button Style -->
    <style name="BrownieCommonActionButton" parent="@style/AppTheme.Button">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/common_btn_text_color</item>
        <item name="fontPath">fonts/roboto_bold.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/common_strong_text_size</item>
        <item name="android:background">@drawable/common_action_button_state</item>
    </style>

    <!-- Common Action Button -->
    <style name="BrownieCommonActionButton.Inverse" parent="@style/BrownieCommonActionButton">
        <item name="android:textColor">@color/common_btn_text_color_inverse</item>
        <item name="android:background">@drawable/common_action_button_state_inverse</item>
    </style>

    <!-- Accept Action Button -->
    <style name="BrownieAcceptActionButton" parent="@style/BrownieCommonActionButton">
        <item name="android:textColor">@color/common_btn_text_color_inverse</item>
        <item name="android:background">@drawable/accept_action_button_state</item>
    </style>

    <!-- Accept Action Button -->
    <style name="BrownieAcceptActionButton.Transparent" parent="@style/BrownieCommonActionButton">
        <item name="android:textColor">@color/common_btn_text_color_inverse</item>
        <item name="android:background">@drawable/accept_action_button_transparent_state</item>
    </style>

    <!-- Cancel Action Button -->
    <style name="BrownieCancelActionButton" parent="@style/BrownieCommonActionButton">
        <item name="android:textColor">@color/common_btn_text_color_inverse</item>
        <item name="android:background">@drawable/cancel_action_button_state</item>
    </style>

    <!-- Title -->
    <!-- Common Title -->
    <style name="BrownieCommonTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="fontPath">fonts/roboto_bold.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">@dimen/common_title_text_size</item>
    </style>

    <!-- Common Title Medium -->
    <style name="BrownieCommonTitle.Medium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/common_title_text_size_medium</item>
    </style>

    <!-- Common Text Style -->
    <style name="BrownieCommonText">
        <item name="fontPath">fonts/roboto_regular.ttf</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/common_strong_text_size</item>
    </style>

    <!-- Common Strong Text -->
    <style name="BrownieCommonStrongText" parent="BrownieCommonText">
        <item name="fontPath">fonts/roboto_bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Common Strong Medium Text -->
    <style name="BrownieCommonStrongText.Big">
        <item name="android:textSize">@dimen/common_strong_big_text_size</item>
    </style>

    <!-- Common Strong Medium Text -->
    <style name="BrownieCommonStrongText.Medium">
        <item name="android:textSize">@dimen/common_strong_medium_text_size</item>
    </style>

    <!-- Common Strong Small Text -->
    <style name="BrownieCommonStrongText.Small">
        <item name="android:textSize">@dimen/common_strong_small_text_size</item>
    </style>

    <!-- Common Strong Text All Caps -->
    <style name="BrownieCommonStrongText.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="BrownieCommonTextInputLayout"
        parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/common_edit_text_size</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Control color on normal state -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Control color on activated state -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="BrownieCommonTextFloatLabelAppearance" parent="@android:style/TextAppearance.Small">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/common_edit_text_size</item>
    </style>

    <!-- Dialogs -->

    <style name="BrownieCommonDialogWindow.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="BrownieCommonDialogFragmentTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/BrownieCommonDialogWindow.Window</item>
        <item name="android:windowBackground">@drawable/common_dialog_drawable</item>
    </style>


</resources>
