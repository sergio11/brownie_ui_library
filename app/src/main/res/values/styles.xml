<resources>

    <!-- Base application theme. -->
    <style name="BrownieTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Title -->
    <!-- Common Title -->
    <style name="BrownieCommonTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="fontPath">fonts/roboto_bold.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">@dimen/common_title_text_size</item>
    </style>

    <!-- Common Title Medium -->
    <style name="BrownieCommonTitle.Medium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/common_title_text_size_medium</item>
    </style>

    <!-- Common Text Style -->
    <style name="BrownieCommonText">
        <item name="fontPath">fonts/roboto_regular.ttf</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/common_strong_text_size</item>
    </style>

    <style name="BrownieCommonText.Medium">
        <item name="android:textSize">@dimen/common_strong_medium_text_size</item>
    </style>

    <!-- Common Strong Text -->
    <style name="BrownieCommonStrongText" parent="BrownieCommonText">
        <item name="fontPath">fonts/roboto_bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Common Strong Medium Text -->
    <style name="BrownieCommonStrongText.Big">
        <item name="android:textSize">@dimen/common_strong_big_text_size</item>
    </style>

    <!-- Common Strong Medium Text -->
    <style name="BrownieCommonStrongText.Medium">
        <item name="android:textSize">@dimen/common_strong_medium_text_size</item>
    </style>

    <!-- Common Strong Small Text -->
    <style name="BrownieCommonStrongText.Small">
        <item name="android:textSize">@dimen/common_strong_small_text_size</item>
    </style>

    <!-- Common Strong Text All Caps -->
    <style name="BrownieCommonStrongText.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="BrownieCommonTextInputLayout"
        parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/common_edit_text_size</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Control color on normal state -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Control color on activated state -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="BrownieCommonTextFloatLabelAppearance" parent="@android:style/TextAppearance.Small">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/common_edit_text_size</item>
    </style>

    <!-- Dialogs -->

    <style name="BrownieCommonDialogWindow.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="BrownieCommonDialogFragmentTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/BrownieCommonDialogWindow.Window</item>
        <item name="android:windowBackground">@drawable/common_dialog_drawable</item>
    </style>


</resources>
